<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradiente_plano_de_fundo">


    <TextView
        android:id="@+id/text_diagnosticos"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/gradiente_azul"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="DiagnÃ³sticos"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_exames"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_diagnosticos">



        <RelativeLayout
            android:id="@+id/botoes_exames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/text_glicose"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ecf0f1"
                android:drawableLeft="@mipmap/ic_prancheta"
                android:drawableRight="@mipmap/ic_seta_direita"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Glicemia"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/text_hemograma"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/text_hemograma"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/text_glicose"
                android:layout_marginTop="1dp"
                android:background="#ecf0f1"
                android:drawableLeft="@mipmap/ic_prancheta"
                android:drawableRight="@mipmap/ic_seta_direita"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Hemograma"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_lipidograma"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/text_hemograma"
                android:background="#ecf0f1"
                android:layout_marginTop="1dp"
                android:drawableLeft="@mipmap/ic_prancheta"
                android:drawableRight="@mipmap/ic_seta_direita"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Lipidograma"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />


        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/image_nova_atividade"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@mipmap/ic_mais_bola"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.929" />

    <Button
        android:onClick="ShowPopup"
        android:id="@+id/showPop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Importante"
        app:layout_constraintTop_toBottomOf="@+id/scroll_exames"
        tools:layout_editor_absoluteX="136dp" />


</android.support.constraint.ConstraintLayout>