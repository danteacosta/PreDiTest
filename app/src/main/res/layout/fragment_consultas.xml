<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradiente_plano_de_fundo">

    <Button
        android:id="@+id/btn_data_consulta_marcada"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/borda_curvada_branca"
        android:text="DATA"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_nome_nova_consulta"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_horario_consulta_marcada"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/borda_curvada_branca"
        android:text="HorÃ¡rio"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_data_consulta_marcada"
        app:layout_constraintBottom_toBottomOf="@+id/btn_data_consulta_marcada"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_data_tela_consulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Agende uma nova consulta!"
        android:textColor="@color/colorBranco"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradiente_branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_data_consulta_marcada" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/linha_vertical"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/textView_card_nova_consulta"
        app:layout_constraintLeft_toLeftOf="@+id/textView_card_nova_consulta"
        app:layout_constraintRight_toRightOf="@+id/textView_card_nova_consulta"
        app:layout_constraintTop_toTopOf="@+id/textView_card_nova_consulta"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView_card_nova_consulta"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/borda_curvada_branca"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="top|start"
        android:text="  Consultas Marcadas (0)"
        android:background="@color/colorBranco"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_card_nova_consulta"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.529" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_card_nova_consulta">

        <ListView
            android:id="@+id/lista_consultas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"></ListView>

    </ScrollView>

    <ImageView
        android:id="@+id/imageView_editar_consultas"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/ic_editar_bola"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/editText_nome_nova_consulta"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorBranco"
        android:ems="10"
        android:hint="Nova Consulta"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_data_tela_consulta" />

    <TextView
        android:id="@+id/textView_data_card_nova_consulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="25/03"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_card_nova_consulta"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintTop_toTopOf="@+id/textView_nome_card_nova_consulta"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/textView_nome_card_nova_consulta"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView_nome_card_nova_consulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_card_nova_consulta"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/textView_card_nova_consulta"
        app:layout_constraintTop_toTopOf="@+id/textView_card_nova_consulta" />

    <TextView
        android:id="@+id/textView_horario_card_nova_consulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="9 : 20"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/textView_data_card_nova_consulta"
        app:layout_constraintRight_toRightOf="@+id/textView_data_card_nova_consulta"
        app:layout_constraintTop_toBottomOf="@+id/textView_data_card_nova_consulta" />

    <Button
        android:id="@+id/btn_agendar_nova_consulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/borda_curvada_verde"
        android:text="AGENDAR"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/btn_data_consulta_marcada"
        app:layout_constraintLeft_toRightOf="@+id/btn_data_consulta_marcada"
        app:layout_constraintRight_toLeftOf="@+id/btn_horario_consulta_marcada"
        app:layout_constraintTop_toTopOf="@+id/btn_data_consulta_marcada"
        app:layout_constraintHorizontal_bias="0.5" />


</android.support.constraint.ConstraintLayout>