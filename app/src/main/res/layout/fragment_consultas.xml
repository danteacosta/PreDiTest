<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradiente_plano_de_fundo">


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="6dp"
        android:id="@+id/relativeLayout">

        <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/compactcalendar_view"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:compactCalendarBackgroundColor="@color/colorBranco"
            app:compactCalendarCurrentDayBackgroundColor="#bdc3c7"
            app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorAccent"
            app:compactCalendarMultiEventIndicatorColor="#fff"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextColor="@color/colorBackground"
            app:compactCalendarTextSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_data_marcada"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="dia __, de xablembro 2017"
        android:background="@color/colorBranco"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="0dp" />

    <EditText
        android:id="@+id/text_consulta_horario"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorBranco"
        android:gravity="center_vertical"
        android:hint="00 : 00"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_data_marcada"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/text_nome_do_exame"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorBranco"
        android:gravity="center_vertical"
        android:hint="Nome do Exame"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_consulta_horario"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/text_consultas_local_do_exame"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorBranco"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:hint="Local do Exame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_do_exame"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_agendar_consulta"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorConfirm"
        android:gravity="center_vertical"
        android:text="AGENDAR"
        android:textAlignment="center"
        android:textColor="@color/colorBranco"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_consultas_local_do_exame"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>