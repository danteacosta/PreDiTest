<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF"
    android:id="@+id/tela_pos_login"
    tools:context="app.com.example.wagner.meupredi.PosLogin"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/text_bem_vindo_poslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Seja Bem-Vindo!"
        android:textSize="30dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mensagem_pos_login"
        android:layout_width="297dp"
        android:layout_height="36dp"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="24dp"
        android:text="@string/activity_pos_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_usuario_poslogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/edit_idade_poslogin"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_idade_poslogin" />

            <TextView
                android:id="@+id/text_idade_poslogin"
                android:layout_width="35dp"
                android:layout_height="0dp"
                android:text="Idade"
                android:layout_marginLeft="37dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/mensagem_pos_login" />

            <TextView
                android:id="@+id/text_peso_poslogin"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:text="Peso"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_idade_poslogin"
                android:layout_marginLeft="37dp"
                app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edit_peso_poslogin"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_peso_poslogin" />

            <TextView
                android:id="@+id/text_circunferencia_poslogin"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:text="CircunferÃªncia"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_altura_poslogin"
                android:layout_marginRight="73dp"
                app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/edit_circunferencia_poslogin"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_circunferencia_poslogin" />

            <TextView
                android:id="@+id/text_nome_usuario_poslogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sr Fulano"
                android:textSize="20sp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/text_bem_vindo_poslogin"
                android:layout_marginLeft="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.127" />

    <Button
        android:id="@+id/btn_concluir_poslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:text="CONCLUIR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_cancelar_poslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:text="CANCELAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/text_altura_poslogin"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="Altura"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/mensagem_pos_login"
                android:layout_marginRight="126dp"
                app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/edit_altura_poslogin"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_altura_poslogin" />

</android.support.constraint.ConstraintLayout>