<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradiente_plano_de_fundo"
    android:id="@+id/tela_peso"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorBranco"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/text_pesoAtual_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Peso Atual"
        android:textColor="@color/colorBackground"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/text_pesoAtual_valor_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="val"
        android:textColor="@color/colorBackground"
        android:textSize="28sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/text_pesoAtual_peso" />

    <TextView
        android:id="@+id/text_meta_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Peso Ideal"
        android:textColor="@color/colorBackground"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/text_pesoAtual_peso"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/text_meta_valor_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="val"
        android:textColor="@color/colorBackground"
        android:textSize="28sp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/text_meta_peso"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_meta_peso"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/text_meta_peso"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/text_registrar_peso"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/gradiente_roxo"
        android:gravity="center_vertical"
        android:text="Registre um novo peso!"
        android:textAlignment="center"
        android:textColor="@color/colorBranco"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bargraph_peso"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/text_registrar_valor_peso"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorBranco"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="em kg"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textColorHint="@color/colorBackground"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_atualizar_peso"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_registrar_peso"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="343dp"
        android:layout_height="222dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBranco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_atualizar_peso" />


    <Button
        android:id="@+id/btn_atualizar_peso"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorConfirm"
        android:textColor="@color/colorBranco"
        android:text="ATUALIZAR SEU PESO"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/text_registrar_valor_peso"
        android:layout_marginTop="60dp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bargraph_peso"
        android:textColor="@color/colorBranco"
        android:layout_width="343dp"
        android:layout_height="222dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_atualizar_peso"
        app:layout_constraintVertical_bias="0.382"
        android:layout_marginStart="8dp"></com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="+5"
        android:textColor="@color/colorConfirm"
        android:textAlignment="textEnd"
        android:gravity="center_vertical"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_pesoAtual_valor_peso"
        app:layout_constraintHorizontal_bias="0.712"
        app:layout_constraintLeft_toRightOf="@+id/text_pesoAtual_valor_peso"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_pesoAtual_valor_peso"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <View
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view2"
        android:rotation="90"
        app:layout_constraintRight_toLeftOf="@+id/textView18"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/text_pesoAtual_peso"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

    <View
        android:id="@+id/view3"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        android:rotation="90"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/text_meta_peso"
        app:layout_constraintRight_toLeftOf="@+id/text_pesoAtual_peso"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp" />


</android.support.constraint.ConstraintLayout>