<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_sair"
    android:layout_gravity="center"
    android:layout_width="250dp"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/text_msg_sair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sair_sim_fragment"
        android:layout_centerHorizontal="true"
        android:text="Deseja realmente sair?"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="3dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_sair_sim_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Sim"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_sair_nao_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NÃ£o"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_sair_sim_fragment"
        app:layout_constraintRight_toRightOf="@+id/btn_sair_sim_fragment"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_sair_sim_fragment" />

</android.support.constraint.ConstraintLayout>